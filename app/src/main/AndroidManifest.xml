<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.edu.ifsp.scl.ads.pdm.seriesmanager">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/series_manager_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SeriesManager">
        <activity
            android:name=".activitiy.UserRegisterActivity"
            android:exported="true" />
        <activity
            android:name=".activitiy.PasswordRecoveryActivity"
            android:exported="true" />
        <activity
            android:name=".activitiy.AuthenticationActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activitiy.ManageEpisodeActivity"
            android:exported="true" />
        <activity
            android:name=".activitiy.EpisodeActivity"
            android:exported="true" />
        <activity
            android:name=".activitiy.ManageSeasonActivity"
            android:exported="true" />
        <activity
            android:name=".activitiy.ManageShowActivity"
            android:exported="true" />
        <activity
            android:name=".activitiy.SeasonActivity"
            android:exported="true" />
        <activity
            android:name=".activitiy.MainActivity"
            android:exported="true" />
    </application>

</manifest>
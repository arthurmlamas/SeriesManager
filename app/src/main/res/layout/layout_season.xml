<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="7dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusable="true"
    android:background="?android:selectableItemBackground">

    <TextView
        android:id="@+id/seasonNumberTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Xª Temporada"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/seasonReleasedYearTv" />

    <TextView
        android:id="@+id/seasonReleasedYearTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ano de lançamento"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/seasonNumOfEpisodesTv"
        app:layout_constraintStart_toEndOf="@id/seasonNumberTv"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/seasonNumOfEpisodesTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="X Episódios"
        android:textStyle="italic"
        app:layout_constraintTop_toBottomOf="@id/seasonNumberTv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>